<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="style/styles.css" />
    <link rel="icon" href="data:," />
    <title>ToDoList</title>
  </head>
  <body>
    <h1 class="box" id="heading"><%= listTitle %></h1>
    <div class="box">
      <% result.forEach((item) => { %>
      <form action="/delete" method="post">
        <div class="item">
          <input
            type="checkbox"
            name="checkbox"
            onchange="this.form.submit()"
            value="<%= item._id %>"
          />
          <p><%= item.name %></p>
        </div>
        <input type="hidden" name="listT" value="<%= listTitle %>" />
      </form>
      <% }); %>
      <form class="item" action="/" method="post">
        <input
          type="text"
          name="newItem"
          placeholder="New Item"
          autocomplete="off"
        />
        <button
          class="raise"
          type="submit"
          name="button"
          value="<%= listTitle %>"
        >
          +
        </button>
      </form>
    </div>
  </body>
</html>
